<div>
  {{#if data.freeStatPointsAvailable }}
    <p>Free points available! ({{data.freeStatPoints.unallocated}})</p>
  {{/if}}
  <table class="statTable">
    <tr>
      <th>Attributes</th>
      <th>Total</th>
      {{#if data.freeStatPointsAvailable }}
        <th>Add</th>
      {{/if}}
    </tr>
    {{#each data.displayStats as |stat|}}
      <tr class="stat-row" data-stat="{{stat.key}}">
        <td title="{{stat.description}}">{{stat.name}}</td>
        <td title="{{stat.breakdownText}}">{{stat.value}}</td>
        {{#if ../data.freeStatPointsAvailable }}
          <td>
            <a class="item-control stat-add" title="Add free point"><i class="fas fa-plus"></i></a>
          </td>
        {{/if}}
      </tr>
    {{/each}}
  </table>
</div>